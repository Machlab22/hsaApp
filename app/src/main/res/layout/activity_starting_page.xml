<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".StartingPage">



  <TextView
      android:id="@+id/text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="45dp"
      android:layout_marginTop="370dp"
      android:layout_marginEnd="8dp"
      android:fontFamily="@font/aclonica"
      android:text="Hindustan Smart"
      android:textColor="@color/white"
      android:textSize="35dp"
      android:textStyle="bold">

  </TextView>


  <TextView
      android:id="@+id/text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="100dp"
      android:layout_marginTop="450dp"
      android:layout_marginEnd="8dp"
      android:fontFamily="@font/arizonia"
      android:text="Automation Technologies"
      android:textColor="@color/white"
      android:textSize="25dp"
      android:textStyle="bold">

  </TextView>

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/laView"
      android:layout_width="400dp"
      android:layout_height="400dp"
      android:layout_centerHorizontal="true"
      android:elevation="5000dp"
      app:lottie_autoPlay="true"
      app:lottie_rawRes="@raw/robites" />


  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/SubmitBtn"
      android:layout_width="1400dp"
      android:layout_height="1000dp"
      android:layout_marginHorizontal="5dp"
      android:layout_marginTop="475dp"
      android:elevation="5000dp"
      app:lottie_autoPlay="true"
      app:lottie_rawRes="@raw/getstart" />


</RelativeLayout>